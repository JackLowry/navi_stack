<?xml version="1.0"?>
<robot xmlns:body="http://playerstage.sourceforge.net/gazebo/xmlschema/#body" 
       xmlns:controller="http://playerstage.sourceforge.net/gazebo/xmlschema/#controller"
       xmlns:geom="http://playerstage.sourceforge.net/gazebo/xmlschema/#geom" 
       xmlns:interface="http://playerstage.sourceforge.net/gazebo/xmlschema/#interface" 
       xmlns:joint="http://playerstage.sourceforge.net/gazebo/xmlschema/#slider" 
       xmlns:sensor="http://playerstage.sourceforge.net/gazebo/xmlschema/#sensor" 
       xmlns:xacro="http://ros.org/wiki/xacro"
       name="Navigator">

	<property name="baseline_narrow" value="0.010"/>
	<property name="baseline_wide"   value="0.020"/>

	<include filename="$(find navi_model)/urdf/common_urdf_xacro.xml" />
	<include filename="$(find navi_model)/urdf/base_urdf_xacro.xml" />
	<include filename="$(find navi_model)/urdf/camera_urdf_xacro.xml" />
	<include filename="$(find navi_model)/urdf/wheel_urdf_xacro.xml" />
	   
	<navi_base name="base"/> 
	<wheel prefix="fl" reflect_x="1" reflect_y="1"/>
	<wheel prefix="fr" reflect_x="1" reflect_y="-1"/>
	<wheel prefix="br" reflect_x="-1" reflect_y="-1"/>
	<wheel prefix="bl" reflect_x="-1" reflect_y="1"/>

	<stereo-camera prefix="narrow" topic="vision/narrow" baseline="${baseline_narrow}"/>
	<stereo-camera prefix="wide"   topic="vision/wide"   baseline="${baseline_wide}"/>
</robot>
