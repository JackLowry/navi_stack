<ultrasound prefix="tr" xyz="0.130302 -0.070104 0.034925" rpy="0  0 ${-M_PI/4}" parent="fr_topQuarter_link"/> -->
<ultrasound prefix="bl" xyz="0.15621  0.109474 0.0269875" rpy="0 0 0" parent="base_link"/>
<ultrasound prefix="bc" xyz="0.15621 0 0.0269875" rpy="0 0 0" parent="base_link"/>
<ultrasound prefix="br" xyz="0.15621 -0.109474 0.0269875" rpy="0 0 0" parent="base_link"/>


<laser />

       
 </robot>
    
