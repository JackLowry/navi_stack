<package>
  <description>
  	Stereo, single image rectification, and disparity processing that is
	hardware accelerated using OpenCV's alpha GPU module.
  </description>
  <author>Kurt Konolige, Jeremy Leibs, Patrick Mihelich, Michael Koval</author>
  <license>BSD</license>
  <review status="unreviewed"/>
  <export>
    <cpp cflags="-I${prefix}/include" lflags="-Wl,-rpath,${prefix}/lib -L${prefix}/lib -lstereo_image_proc" />
  </export>
  <depend package="roscpp"/>
  <depend package="message_filters"/>
  <depend package="opencv2"/>
  <depend package="cv_bridge"/>
  <depend package="sensor_msgs"/>
  <depend package="stereo_msgs"/>
  <depend package="image_proc"/>
  <depend package="dynamic_reconfigure"/>
  <platform os="ubuntu" version="9.04"/>
  <platform os="ubuntu" version="9.10"/>
  <platform os="ubuntu" version="10.04"/>
</package>
